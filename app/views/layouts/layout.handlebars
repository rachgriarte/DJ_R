<!DOCTYPE HTML>
<html lang="en-us">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- CSS links -->
  <link rel="stylesheet" href="/assets/css/reset.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">

  {{#each css}}
    <link rel="stylesheet" href="/assets/css/{{this}}">
  {{/each}}

  <link rel="stylesheet" type="text/css" href="/assets/css/narrow-jumbotron.css">

  {{#each css2}}
    <link rel="stylesheet" type="text/css" href="/assets/css/login.css">
  {{/each}}

  <title>BETter App</title>
</head>

<body>
  {{!-- Displays messages --}}
  {{#if success_msg}}
    <div class="alert alert-success">
      {{success_msg}}
    </div>
  {{/if}}

  {{#if error_msg}}
    <div class="alert alert-danger">
      {{error_msg}}
    </div>
  {{/if}}

  {{#if error}}
    <div class="alert alert-danger">
      {{error}}
    </div>
  {{/if}}

  {{!-- Navigation Bar --}}
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <a class="navbar-brand" href="/">BETter</a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
      {{!-- Empty div for placement --}}
      <div class="mr-auto"></div>
      
      {{!-- Authentication Links --}}
      <ul class="navbar-nav mr-2">

        {{!-- Displays if there is a user logged in --}}
        {{#if firstname}}
        {{!-- Logout --}}
          <li class="nav-item">
            <a class="nav-link text-white">You are logged in as: {{firstname}}</a>
            
            {{!-- Hidden fields --}}
            <input type="hidden" value={{email}} id="hiddenEmail"> 
            <input type="hidden" value={{userid}} id="hiddenId">
          </li>

          {{!-- Logout --}}
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        {{/if}}

        {{!-- Displays if there is no user logged in --}}
        {{#unless firstname}}
          {{!-- Login --}}
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>

          {{!-- Register --}}
          <li class="nav-item">
            <a class="nav-link" href="/register">Register</a>
          </li>
        {{/unless}}
      </ul>
    </div>
  </nav>

  {{{body}}}

  <!-- Javascript links -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
  <script src="/javascript/game.js" type="text/javascript"></script>
</body>
</html>